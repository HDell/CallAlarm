<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/details_description_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/details_contacts_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    
    <TextView
        android:id="@+id/details_contacts_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/dummy_text"
        app:layout_constraintLeft_toLeftOf="@id/details_contacts_image"
        app:layout_constraintRight_toRightOf="@id/details_contacts_image"
        app:layout_constraintTop_toBottomOf="@id/details_contacts_image"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/details_contacts_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummy_text"
        app:layout_constraintLeft_toLeftOf="@id/details_contacts_image"
        app:layout_constraintRight_toRightOf="@id/details_contacts_image"
        app:layout_constraintTop_toBottomOf="@id/details_contacts_name"
        android:textSize="12sp" />

</android.support.constraint.ConstraintLayout>